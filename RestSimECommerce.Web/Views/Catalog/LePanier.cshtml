@model IEnumerable<RestSimECommerce.Entities.Product>
@{
    ViewData["Title"] = "LePanier";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="center-1">

    <div class="page shopping-cart-page">
        <div class="page-title">
            <h1>Le Panier</h1>
        </div>
        <div class="page-body">
            <div class="order-summary-content">


                <form method="post" enctype="multipart/form-data" id="shopping-cart-form" action="/cart">
                    <div class="table-wrapper">
                        <table class="cart">
                            <colgroup>
                                <col width="1">
                                <col width="1">
                                <col width="1">
                                <col>
                                <col width="1">
                                <col width="1">
                                <col width="1">
                            </colgroup>
                            <thead>
                                <tr>
                                    <th class="remove-from-cart">
                                        Remove
                                    </th>
                                    <th class="sku">
                                        SKU
                                    </th>
                                    <th class="product-picture">
                                        Image
                                    </th>
                                    <th class="product">
                                        Product(s)
                                    </th>
                                    <th class="unit-price">
                                        Price
                                    </th>
                                    <th class="quantity">
                                        Qty.
                                    </th>
                                    <th class="subtotal">
                                        Total
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="remove-from-cart">
                                        <label class="td-title" for="removefromcart18529">Supprimer:</label>
                                        <input type="checkbox" name="removefromcart" id="removefromcart18529" value="18529">
                                    </td>
                                    <td class="sku">
                                        <label class="td-title">SKU:</label>
                                        <span class="sku-number">LE_IC_600</span>
                                    </td>
                                    <td class="product-picture">
                                        <a href="/lenovo-ideacentre-600-all-in-one-pc"><img alt="Picture of ..." src="" title="Show details for ..."></a>
                                    </td>
                                    <td class="product">
                                        <a href="/..." class="product-name">....</a>
                                    </td>
                                    <td class="unit-price">
                                        <label class="td-title">Price:</label>
                                        <span class="product-unit-price">$500.00</span>
                                    </td>
                                    <td class="quantity">
                                        <label class="td-title" for="itemquantity18529">Qté.:</label>
                                        <input name="itemquantity18529" id="itemquantity18529" type="text" value="1" class="qty-input">
                                    </td>
                                    <td class="subtotal">
                                        <label class="td-title">Total:</label>
                                        <span class="product-subtotal">$500.00</span>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="cart-options">
                        <div class="common-buttons">
                            <input type="submit" name="updatecart" value="Update shopping cart" class="button-2 update-cart-button">
                            <input type="submit" name="continueshopping" value="Continue shopping" class="button-2 continue-shopping-button">
                        </div>

                        <div class="checkout-attributes">
                            <dl>
                                <dt id="checkout_attribute_label_1">
                                    <label class="text-prompt">
                                        Emballage Cadeau
                                    </label>
                                    <span class="required">*</span>
                                </dt>
                                <dd id="checkout_attribute_input_1">
                                    <select name="checkout_attribute_1" id="checkout_attribute_1">
                                        <option selected="selected" value="1">No</option>
                                        <option value="2">Yes [+$10.00]</option>
                                    </select>
                                </dd>
                            </dl>
                        </div>

                        <div class="selected-checkout-attributes">
                            Emballage Cadeau: No
                        </div>
                    </div>
                    <div class="cart-footer">

                        <div class="cart-collaterals">
                            <div class="deals">
                                <div class="coupon-box">
                                    <div class="title">
                                        <strong>Code Promo</strong>
                                    </div>
                                    <div class="hint">
                                        Enter votre coupon ici
                                    </div>
                                    <div class="coupon-code">
                                        <input name="discountcouponcode" id="discountcouponcode" type="text" class="discount-coupon-code" aria-label="Enter discount coupon code">
                                        <input type="submit" name="applydiscountcouponcode" id="applydiscountcouponcode" value="Apply coupon" class="button-2 apply-discount-coupon-code-button">
                                    </div>
                                </div>


                                <div class="giftcard-box">
                                    <div class="title">
                                        <strong>Cartes Cadeaux</strong>
                                    </div>
                                    <div class="hint">Enter code carte cadeau</div>
                                    <div class="coupon-code">
                                        <input name="giftcardcouponcode" id="giftcardcouponcode" type="text" class="gift-card-coupon-code" aria-label="Enter gift card code">
                                        <input type="submit" name="applygiftcardcouponcode" id="applygiftcardcouponcode" value="Add gift card" class="button-2 apply-gift-card-coupon-code-button">
                                    </div>
                                </div>



                            </div>
                            <div class="shipping">

                                <div class="estimate-shipping">
                                    <div class="title">
                                        <strong>Estimate shipping</strong>
                                    </div>
                                    <div class="hint">Enter your destination to get a shipping estimate</div>
                                    <div class="shipping-options">
                                        <div class="inputs">
                                            <label for="CountryId">Country:</label>
                                            <select class="country-input" id="CountryId" name="CountryId">
                                                <option value="0">Select country</option>

                                                <option value="241">Zimbabwe</option>
                                            </select>
                                            <span class="required">*</span>
                                        </div>
                                        <div class="inputs">
                                            <label for="StateProvinceId">Pays/Département:</label>
                                            <select class="state-input" id="StateProvinceId" name="StateProvinceId">
                                                <option value="0">Other (Non US)</option>
                                            </select>
                                            <span id="estimate-shipping-loading-progress" style="display: none;" class="please-wait">Wait...</span>
                                        </div>
                                        <div class="inputs">
                                            <label for="ZipPostalCode">Zip / postal code:</label>
                                            <input class="zip-input" type="text" id="ZipPostalCode" name="ZipPostalCode" value="">
                                            <span class="required">*</span>
                                        </div>
                                        <div class="buttons">
                                            <input id="estimate-shipping-button" type="button" value="Estimate shipping" class="button-2 estimate-shipping-button">
                                        </div>
                                    </div>
                                    <div class="estimate-shipping-result"></div>
                                </div>
                            </div>
                        </div>
                        <div class="totals">
                            <div class="total-info">
                                <table class="cart-total">
                                    <tbody>
                                        <tr class="order-subtotal">
                                            <td class="cart-total-left">
                                                <label>Sub-Total:</label>
                                            </td>
                                            <td class="cart-total-right">
                                                <span class="value-summary">$500.00</span>
                                            </td>
                                        </tr>
                                        <tr class="shipping-cost">
                                            <td class="cart-total-left">
                                                <label>Shipping:</label>
                                            </td>
                                            <td class="cart-total-right">
                                                <span class="value-summary">$0.00</span>
                                            </td>
                                        </tr>
                                        <tr class="tax-value">
                                            <td class="cart-total-left">
                                                <label>Tax:</label>
                                            </td>
                                            <td class="cart-total-right">
                                                <span class="value-summary">$0.00</span>
                                            </td>
                                        </tr>
                                        <tr class="order-total">
                                            <td class="cart-total-left">
                                                <label>Total:</label>
                                            </td>
                                            <td class="cart-total-right">
                                                <span class="value-summary"><strong>$500.00</strong></span>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>


                            <div id="terms-of-service-warning-box" title="Terms of service" style="display: none;">
                                <p>Please accept the terms of service before the next step.</p>
                            </div>
                            <div class="terms-of-service">
                                <input id="termsofservice" type="checkbox" name="termsofservice">
                                <label for="termsofservice">I agree with the terms of service and I adhere to them unconditionally</label>
                                <a class="read" id="read-terms">(read)</a>

                            </div>
                            <div class="checkout-buttons">

                                <button type="submit" id="checkout" name="checkout" value="checkout" class="button-1 checkout-button">
                                    Checkout
                                </button>
                            </div>
                            <div class="addon-buttons">
                            </div>
                        </div>
                    </div>
                    <input name="__RequestVerificationToken" type="hidden" value="">
                </form>

            </div>
        </div>
    </div>


</div>

